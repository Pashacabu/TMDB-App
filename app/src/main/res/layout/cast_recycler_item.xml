<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/actors_recycler_item">

    <androidx.cardview.widget.CardView
        android:id="@+id/actor_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/actor_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/actor_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/actor_name_color"
        android:textSize="@dimen/movie_details_actor"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/actor_card"
        app:layout_constraintRight_toRightOf="@id/actor_card"
        app:layout_constraintTop_toBottomOf="@id/actor_card" />

</androidx.constraintlayout.widget.ConstraintLayout>